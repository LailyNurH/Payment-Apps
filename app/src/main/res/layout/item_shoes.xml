<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="180dp"
        android:layout_height="260dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="#979797"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppinssemibold"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="4.6"
                android:textSize="10sp"
                app:drawableEndCompat="@drawable/ic_star" />

            <ImageView
                android:id="@+id/imgshoes"
                android:layout_width="wrap_content"
                android:layout_height="201dp"
                android:background="@drawable/airmax270" />

            <TextView
                android:id="@+id/shoesname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgshoes"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-30dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Air Max 270"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/typeshoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shoesname"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Men's Shoes"
                android:textColor="#979797" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/typeshoes"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppinsmedium"
                android:text=" $ 13,995"
                android:textColor="#464646" />
<!--            https://github.com/LailyNurH/responsi-mobile-programming3.git-->
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />
</androidx.constraintlayout.widget.ConstraintLayout>